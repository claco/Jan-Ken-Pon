<% if authenticated? %>
	Welcome <%=h current_user.name%>
	<%=link_to 'Logout', logout_path%>
	
	<div>
		<%=link_to "Leader Board!", stats_path%>
	</div>
	
	<div>
	New Game!
	<% form_for Game.new do |f| -%>
      <%= f.hidden_field :mode_id, :value => 1%>
	  <%= f.submit "Fight!"%>
	<% end -%>
	</div>
<% else %>
	<%=link_to 'Login', login_path%>
	<%=link_to 'Register', register_path%>
	<%=link_to 'Forgot password?', forgot_path%>
<% end %>

<%=h flash.now[:notice]%>


<hr />
<%=render_open_games%>

<%=render_my_open_games%>

<%=render_top_winners%>
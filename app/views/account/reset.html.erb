<%=h flash[:notice]%>

<% if !authenticated? %>	
	Enter your new password:

	<%=error_messages_for 'user'%>
	<% form_for :User do |f| -%>
		<%= f.label :password, "New Password" %>
		<%= f.password_field :password %>

		<%= f.label :confirm_password, "Confirm Password" %>
		<%= f.password_field :confirm_password %>

		<%= f.submit "Update" %>
	<% end -%>
<% end %>
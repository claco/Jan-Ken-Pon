<%=h flash[:notice]%>

<% if authenticated? %>
	<%if !current_user.confirmed%>
		<%=link_to 'Resend Confirmation', resend_path%>
	<%end%>
	
	<%=error_messages_for 'user', 'player'%>
	
	<% form_tag do %>		
		<%=label :user, :email, 'New Email Address:'%>
		<%=text_field :user, :email, :value => ''%>

		<%=label :user, :password, 'New Password:'%>
		<%=password_field :user, :password%>

		<%=label :user, :password_confirmation, 'Confirm New Password:'%>
		<%=password_field :user, :password_confirmation %>

		<%=label :player, :name, 'Player Nic:'%>
		<%=text_field :player, :name%>
		
		<%= submit_tag "Update" %>
	<% end -%>
<% end %>

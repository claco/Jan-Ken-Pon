<% form_for :User do |f| -%>
	<fieldset>
		<p>
			<%= f.label :email, "Email Address" %><br />
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :password, "Password" %><br />
			<%= f.password_field :password %>
		</p>
		<p>
			<%= image_submit_tag("buttons/login.png", :id => "agree", :name => "agree") %>
		</p>
	</fieldset>
<% end -%>
